<h1>View Flashcards</h1>
<ul>
<% for flashcard in @flashcards %>
  <li><%= link_to flashcard.keyword, edit_flashcard_path(flashcard.id) %> <%= link_to "[delete]", flashcard_path(flashcard.id), :method => :delete %></li>
<% end %>
</ul>
<h2><%= button_to "Add a New Flashcard", new_flashcard_path, :method => :get %><h2>
